<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_draw_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="chemia.httpsgithub.comahyoung1.chemia.drawPage">

    <TextView
        android:text="C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="420dp"
        android:layout_alignLeft="@+id/center_Atom_tv"
        android:layout_alignStart="@+id/center_Atom_tv"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:id="@+id/textView5"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:text="Center Atom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:textSize="32sp"
        android:id="@+id/center_Atom_tv" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/attached_elements_tv"
        android:layout_marginTop="20dp"
        android:id="@+id/atchd_Elements_spnr"
        android:layout_alignRight="@+id/centerAtomSpinner"
        android:layout_alignEnd="@+id/centerAtomSpinner" />

    <Spinner
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/centerAtomSpinner"
        android:layout_below="@+id/center_Atom_tv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/center_Atom_tv"
        android:layout_alignEnd="@+id/center_Atom_tv" />

    <Button
        android:text="Set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/center_atom_set_btn"
        android:layout_alignTop="@+id/centerAtomSpinner"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp" />

    <Button
        android:text="+"
        android:layout_width = "40dp"
        android:layout_height="40dp"
        android:id="@+id/attached_atom_add_btn"
        android:layout_alignTop="@+id/atchd_Elements_spnr"
        android:layout_toRightOf="@+id/chem_formula_tv"
        android:layout_toEndOf="@+id/chem_formula_tv" />

    <Button
        android:text="-"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/attached_atom_minus_btn"
        android:layout_alignTop="@+id/attached_atom_add_btn"
        android:layout_toLeftOf="@+id/attached_atom_add_btn"
        android:layout_toStartOf="@+id/attached_atom_add_btn" />

    <TextView
        android:text="Chemical Formula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chem_formula_tv"
        android:textSize="32sp"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="3dp"/>

    <TextView
        android:text="Attached Elements"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:id="@+id/attached_elements_tv"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="3dp" />

    <!--Begin chem formula TVs-->
    <TextView
        android:id="@+id/center_atom_display"
        android:text="C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="420dp"
        android:layout_alignLeft="@+id/center_Atom_tv"
        android:layout_alignStart="@+id/center_Atom_tv"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:textColor="#000000"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/first_attached_atom_display"
        android:text="abcd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_alignTop="@id/center_atom_display"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@+id/center_atom_display" />

    <TextView
        android:id="@+id/num_first_attached_atoms"
        android:text="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="10dp"
        android:layout_alignBottom="@id/center_atom_display"
        android:layout_toRightOf="@id/first_attached_atom_display"/>

    <TextView
        android:id="@+id/second_attached_atom_display"
        android:text="H"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_alignTop="@id/center_atom_display"
        android:layout_toRightOf="@+id/num_first_attached_atoms"
        android:layout_marginLeft="4dp"/>

    <TextView
        android:id="@+id/num_second_attached_atoms"
        android:text="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="10dp"
        android:layout_alignBottom="@id/center_atom_display"
        android:layout_toRightOf="@+id/second_attached_atom_display"/>

    <Button
        android:text="Make Formula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/get_formula_btn"
        android:layout_alignTop="@+id/second_attached_atom_display"
        android:layout_toRightOf="@+id/atchd_Elements_spnr"
        android:layout_toEndOf="@+id/atchd_Elements_spnr" />

    <Button
        android:text="Reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reset_formula_btn"
        android:layout_alignTop="@+id/attached_elements_tv"
        android:layout_marginTop="130dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
